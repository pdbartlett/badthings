  %link{href: 'css/all.css', type: 'text/css', rel: 'stylesheet' }
  %link{href: 'http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css', type: 'text/css', rel: 'stylesheet' }

  %body
   .container
    %nav.navbar.navbar-default
     .container-fluid
      .navbar-header
       %button.navbar-toggle.collapsed{data: {target: '#navbar', toggle: 'collapse'}, type: 'button', aria: {expanded: 'false', controls: 'navbar'}}
